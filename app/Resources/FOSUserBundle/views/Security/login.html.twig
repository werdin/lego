{% extends 'FOSUserBundle::layout.html.twig' %}

{% block fos_user_content %}

    <div class="container">
        <div class="row">

            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">{{ 'Sign in'|trans }}</h1>

                <div class="account-wall">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error }}</div>
                    {% endif %}
                    <img class="profile-img"
                         src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">

                    <div class="text-center alert alert-success" role="alert">
                        Login: admin
                        Password: admin
                    </div>
                    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        <input type="text" class="form-control" placeholder="Login" id="username" name="_username"
                               value="{{ last_username }}" required="required" autofocus/>
                        <input type="password" id="password" name="_password" required="required" class="form-control"
                               placeholder="Password"/>
                        <input type="submit" class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit"
                               value="{{ 'Login'|trans({}) }}"/>

                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me" name="_remember_me">
                            {{ 'Remember me'|trans({}) }}
                        </label><span class="clearfix"></span>
                    </form>
                    <a class="text-center new-account"  href="{{ path('fos_user_registration_register') }}">{{ 'Create Account'|trans({}) }}</a>


                </div>

            </div>
        </div>
    </div>
{% endblock fos_user_content %}