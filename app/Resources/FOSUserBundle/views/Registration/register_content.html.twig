{% extends 'FOSUserBundle::layout.html.twig' %}
{% block fos_user_content %}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">{{ 'Sign up'|trans }}</h1>

            <div class="account-wall">
                <img class="profile-img"
                     src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">

                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
                      class="form-signin">
                    {{ form_widget(form) }}
                    <div>
                        <input type="submit" class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit"
                               value="{{ 'Submit'|trans({}) }}"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock fos_user_content %}